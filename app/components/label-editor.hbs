{{#each this.items as |item|}}
  <BsForm @model={{item}} as |form|>
    <div class="row">
      <div class="col">
        <form.element @controlType="input" @property="label" as |el|>
          <el.control placeholder="Label" />
        </form.element>
      </div>
    </div>
  </BsForm>
{{/each}}

<BsForm>
  <BsButton @type="primary" @onClick={{action "addItem"}}>Add Label</BsButton>
  <BsButton @type="primary" @onClick={{action "saveItems"}}>Save Label</BsButton>    
</BsForm>