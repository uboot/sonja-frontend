<BuildTree::PackageReference @recipe={{@package.recipe_revision.recipe}} />
{{#if this.hasBuild}}
  has build "{{this.build.status}}"
  {{#if this.hasFailedBuild}}
    <BuildTree @build={{this.build}} />
  {{/if}}
{{else}}
  no build
{{/if}}
<ul>
  {{#each @package.requires as |requirement|}}
    <BuildTree::PackageNode @present={{true}} @package={{requirement}} />
  {{/each}}
</ul>