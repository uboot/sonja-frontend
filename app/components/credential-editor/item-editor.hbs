<BsForm @model={{@item}} @onSubmit={{@onSave}} as |form|>
  <form.element @controlType="input" @label="URL" @property="url" required />
  <form.element @controlType="input" @label="User" @property="username" required />
  <form.element @controlType="input" @label="Password" @property="password" required />
  <BsButton @onClick={{@onCancel}}>Cancel</BsButton>
  <form.submitButton>Finish Editing</form.submitButton>
</BsForm>