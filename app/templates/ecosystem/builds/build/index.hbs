<h2>Package</h2>
<BuildReference @build={{this.model}} />
<BuildTree @build={{this.model}} />

<h2>Related</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Profile</th>
      <th scope="col" colspan="2">Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.model.commit.builds as |build|}}
      <tr>
        <td>{{build.profile.name}}</td>
        <td>{{build.status}}</td>
        <td>
          <LinkTo @route="ecosystem.builds.build" @model={{build}} class="btn btn-sm btn-primary">Build</LinkTo>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>


<h2>Runs</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Started</th>
      <th scope="col" colspan="2">Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.runs as |run|}}
      <tr>
        <td>{{format-date run.started}}</td>
        <td>{{run.status}}</td>
        <td>
          <LinkTo @route="ecosystem.builds.build.run" @model={{run.id}} class="btn btn-sm btn-primary">Logs</LinkTo>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
