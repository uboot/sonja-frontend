<section>
  <LinkTo @route="ecosystem.settings.channels.new" class="btn btn-primary">New Channel</LinkTo>
</section>

<section>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Channel</th>
        <th scope="col" colspan="3">References</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.model.channels as |channel|}}
        <tr>
          <td><LinkTo @route="ecosystem.settings.channels.channel" @models={{array channel.ecosystem channel}}>{{channel.name}}</LinkTo></td>
          <td>{{channel.conan_channel}}</td>
          <td>{{channel.ref_pattern}}</td>
          <td><LinkTo @route="ecosystem.settings.channels.new" @query={{hash copyFrom=channel.id}} class="btn btn-primary btn-sm">Duplicate</LinkTo></td>
          <td><RemoveDialog @item={{channel}} class="btn-sm"/></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>