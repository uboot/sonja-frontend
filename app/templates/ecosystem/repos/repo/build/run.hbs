<h4>Log</h4>
<p><BuildStatus @status={{this.model.run.status}} /></p>
<p><BuildTime @time={{this.model.run.started}} /></p>

<BsForm @model={{this}} as |form|>
  <form.element @controlType="checkbox" @label="Scroll To Bottom" @property="keepScrolledToBottom" />
</BsForm>

<div class="sonja-log-panel flex-grow-1">
<pre><code>
{{#each this.sortedLogLines as |line|}}
{{line.number}} {{line.content}}
{{/each}}
</code></pre>
  <InfinityLoader @infinityModel={{this.model.logLines}} />
  <div {{scroll-to-when this.scrollToBottom}}/>
</div>

