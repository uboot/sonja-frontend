<h4>Commit</h4>
<p>
  {{this.model.commit.message}}
</p>

<p>
  {{shorten this.model.commit.sha 7}} {{this.model.commit.user_name}} &lsaquo;{{this.model.commit.user_email}}&rsaquo;
</p>

<h4>Package</h4>
<p>
  <BuildReference @build={{this.model}} />
  <BuildTree @build={{this.model}} />
</p>

<h4>Related</h4>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Created</th>
      <th scope="col">Status</th>
      <th scope="col">Profile</th>
      <th scope="col">Result</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.model.commit.builds as |build|}}
      <tr>
        <td>
          <LinkTo @route="ecosystem.repos.repo.build" @model={{build}}>
            <BuildTime @time={{build.created}} />
          </LinkTo>
        </td>
        <td><BuildStatus @status={{build.status}} /></td>
        <td>{{build.profile.name}}</td>
        <td><BuildReference @build={{build}} /></td>
      </tr>
    {{/each}}
  </tbody>
</table>


<h4>Runs</h4>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Started</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.runs as |run|}}
      <tr>
        
        <td>
          <LinkTo @route="ecosystem.repos.repo.build.run" @model={{run.id}}>
            <BuildTime @time={{run.started}} />
          </LinkTo>
        </td>
        <td><BuildStatus @status={{run.status}} /></td>
      </tr>
    {{/each}}
  </tbody>
</table>
