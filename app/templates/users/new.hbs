<h2>New User</h2>

<section>
  <BsForm @onSubmit={{action "createUser"}} @model={{this.user}} as |form|>
    <form.element @controlType="input" @label="Name" @property="user_name" />
    <LinkTo @route="users" class="btn btn-secondary">Cancel</LinkTo>
    <form.submitButton>Create</form.submitButton>
  </BsForm>
</section>